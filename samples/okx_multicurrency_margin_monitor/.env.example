# OKX API Configuration
# Copy this to .env and fill in your credentials

# API Credentials (required)
OKX_API_KEY=your-api-key-here
OKX_API_SECRET=your-api-secret-here
OKX_PASSPHRASE=your-passphrase-here

# Optional Settings
# Set to 1 for demo trading environment
OKX_DEMO_MODE=1

# Monitoring refresh interval in seconds (0 = run once)
MONITOR_REFRESH_INTERVAL=60

# Alert thresholds (margin ratio percentages)
ALERT_WARNING_THRESHOLD=300
ALERT_DANGER_THRESHOLD=150
